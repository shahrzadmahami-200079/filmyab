<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/d_imageview"
        android:layout_width="match_parent"
        android:layout_height="248dp"

        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/d_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d_imageview"
        android:background="@color/tv_title_background"
        android:textAlignment="center"
        android:text="movie_name" />

    <TextView
        android:id="@+id/d_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d_title"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:background="@color/tv_title_background"
        android:text="movie_description" />

</RelativeLayout>